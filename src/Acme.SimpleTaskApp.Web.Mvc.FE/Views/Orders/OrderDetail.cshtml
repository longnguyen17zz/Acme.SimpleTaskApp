@using Acme.SimpleTaskApp.Web.Models.InfoOrder
@model InfoOrderDetailViewModel
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Customers/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Customers/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<nav aria-label="breadcrumb" class="bg-light py-3">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="/Homepage" class="text-secondary">
                    <i class="fas fa-home mr-1"></i>Trang chủ
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/Orders/GetOrderList" class="text-secondary">Đơn hàng của tôi</a>
            </li>
            <li class="breadcrumb-item ">
                <a href="#" class=" active text-primary">Chi tiết đơn hàng</a>
            </li>
           
        </ol>
    </div>
</nav>
<div class=" container card mb-4 shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-column flex-md-row justify-content-between mb-3">
            <div>
                <h5 class="card-title">Mã đơn hàng : @($"#DH{Model.OrderId}")</h5><br />
                <p class="text-muted mb-0">Ngày đặt hàng: @Model.OrderDate</p>
            </div>
            <div class="align-self-start align-self-md-center">
                @if (Model.Status != "Hoàn thành")
                {
                    <span class="badge badge-success px-3 py-2 text-md order-success" data-order-id="@Model.OrderId" style="cursor: pointer;">Xác nhận! Đã nhận hàng</span>
                }
            </div>
        </div>

        <!-- Progress Steps -->
        <div class="d-flex justify-content-center text-center mb-4" style="gap: 200px;">
            <div>
                <div class="rounded-circle mx-auto mb-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: #10b981;">
                    <i class="fas fa-shopping-cart text-white"></i>
                </div>
                <small class="d-block font-weight-medium">Order Placed</small>
            </div>
            <div>
                <div class="rounded-circle mx-auto mb-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;background: #10b981;">
                    <i class="fas fa-check text-white"></i>
                </div>
                <small class="d-block font-weight-medium">Processing</small>
            </div>
            <div>
                <div class="rounded-circle mx-auto mb-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;background: #10b981;">
                    <i class="fas fa-truck text-white"></i>
                </div>
                <small class="d-block font-weight-medium">Shipped</small>
            </div>
            <div>
                <div class="rounded-circle mx-auto mb-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;background: #3b82f6;">
                    <i class="fas fa-home text-white"></i>
                </div>
                <small class="d-block font-weight-medium">Delivered</small>
            </div>
        </div>

        <div class="row">
            <!-- Delivery Info -->
            <div class="col-md-6 mb-3">
                <div class="bg-light p-3 shadow" style="border: 1px solid #ebe3e3; border-radius: 8px;">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-truck mr-2"></i>Delivery Information
                    </h6>
                    <p class="mb-1 font-weight-bold">@Model.FullName</p>
                    <p class="mb-1 text-muted">Tên người đặt hàng: @Model.FullName</p>
                    <p class="mb-1 text-muted">Địa chỉ nhận hàng: @Model.Address</p>
                    <p class="mb-1 text-muted mt-2">Số điện thoại: @Model.PhoneNumber</p>
                </div>
            </div>

            <!-- Payment Info -->
            <div class="col-md-6 mb-3">
                <div class="bg-light p-3 shadow " style="border: 1px solid #ebe3e3; border-radius: 8px;">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-credit-card mr-2"></i>Payment Information
                    </h6>
                    <p class="mb-1 font-weight-bold">Visa •••• •••• •••• 4242</p>
                    <p class="mb-1 text-muted">Payment method: Credit Card</p>
                    <p class="mb-1 text-muted">Transaction ID: txn_1Mk5j2SD8m</p>
                    <p class="mb-3 text-muted">Paid on October 12, 2023</p>

                    <h6 class="text-primary mb-2">
                        <i class="fas fa-box-open mr-2"></i>Shipping Method
                    </h6>
                    <p class="mb-1 text-muted">Express Delivery (2-3 business days)</p>
                    <p class="mb-1 text-muted">Tracking #: SHIP123456789</p>
                    <a href="#" class="text-primary text-decoration-none small">Track Package</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm mb-4">
    <div class="card-body" style="margin: 0px 70px;">
        <h5 class="card-titlet mb-4">Order Items (@Model.Items.Count())</h5>
        <div class="border-top pt-3">
            @foreach(var item in @Model.Items)
            {
                <div class="d-flex flex-column flex-md-row mb-4 pb-3 border-bottom">
                    <div class="flex-shrink-0 mr-md-3 mb-3 mb-md-0">
                        <img src="@item.Image" class="rounded" style="width: 96px; height: 96px; object-fit: cover;" alt="Smartphone">
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">@item.ProductName</h6>
                        <p class="mb-1 text-muted small">Color: Midnight Black • Storage: 256GB</p>
                        <p class="mb-0 text-muted small">SKU: SP-X12-BLK-256</p>
                    </div>
                    <div class="text-md-right mt-3 mt-md-0">
                        <p class="font-weight-bold mb-1">@item.Price.ToString("N0") đ</p>
                        <p class="text-muted small mb-2">Qty: @item.Quantity</p>
                        <button class="btn btn-link btn-sm p-0 text-primary">
                            <i class="fas fa-exchange-alt"></i> Request Return
                        </button>
                    </div>
                </div>
            }
          
        </div>
    </div>
</div>
