@using Acme.SimpleTaskApp.Web.Models.InfoOrder
@model InfoOrderListViewModel

<body class="bg-light">
    <nav aria-label="breadcrumb" class="bg-light py-3">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/Homepage" class="text-secondary">
                        <i class="fas fa-home mr-1"></i>Trang chủ
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#" class="active text-primary">Đơn hàng của tôi</a>
                </li>
               
            </ol>
        </div>
    </nav>
    <div class="container py-5" style="padding-top: 0px !important;">
        <!-- Header -->
        <div class="row align-items-center mb-4">
            <div class="col-md-7">
                <h1 class="h3 font-weight-bold text-dark">Đơn hàng của tôi</h1>
                <p class="text-muted">Quản lý lịch sử đơn hàng</p>
            </div>
            <div class="col-md-5 d-flex justify-content-md-end align-items-center">
                <div class="input-group mr-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white border-right-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control border-left-0" placeholder="Tìm kiếm đơn hàng...">
                </div>
                <button class="btn btn-primary">
                    <i class="fas fa-search mr-1"></i>
                </button>
            </div>
        </div>

        <!-- Order Filters -->
        <div class="mb-4">
            <button class="btn btn-sm btn-primary rounded-pill mr-1">All Orders</button>
            <button class="btn btn-sm btn-light rounded-pill mr-1">To Pay</button>
            <button class="btn btn-sm btn-light rounded-pill mr-1">To Ship</button>
            <button class="btn btn-sm btn-light rounded-pill mr-1">To Receive</button>
            <button class="btn btn-sm btn-light rounded-pill mr-1">Completed</button>
            <button class="btn btn-sm btn-light rounded-pill">Cancelled</button>
        </div>

        <!-- Order Cards -->
        <div class="mb-5">
            @foreach (var order in Model.OrderItems)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between flex-wrap mb-3">
                            <div>
                                <h5 class="mb-1">
                                    Mã đơn hàng #@order.OrderId
                                    <span class="badge">
                                        @order.Status
                                    </span>
                                </h5>
                                <small class="text-muted">Placed on @order.OrderDate</small>
                            </div>
                            <div class="text-right">
                                <strong>@order.TotalAmount.ToString("N0") đ</strong><br>
                                <small class="text-muted">@order.Items.Count() items</small>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between flex-wrap align-items-center">
                            <div class="d-flex">
                                @foreach (var item in order.Items.Take(3))  
                                {
                                    <img src="@item.Image" class="rounded-circle border mr-1" width="48" height="48" alt="@item.ProductName" />
                                }
                            </div>
                            <div class="mt-2 mt-md-0">
                                <button class="btn btn-sm btn-light mr-1">
                                    <i class="fas fa-shopping-cart text-primary"></i> Buy Again
                                </button>
                                <button class="btn btn-sm btn-light mr-1">
                                    <i class="fas fa-star text-warning"></i> Rate Products
                                </button>
                                <a class="btn btn-sm btn-light" href="@Url.Action("OrderDetail", "Orders", new { id = order.OrderId })">
                                    <i class="fas fa-file-invoice text-purple"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="#">8</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</body>
