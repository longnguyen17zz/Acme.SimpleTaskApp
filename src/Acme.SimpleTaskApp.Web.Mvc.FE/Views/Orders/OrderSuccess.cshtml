@using Acme.SimpleTaskApp.Web.Models.OrderSuccess
@model OrderSuccessViewModel
@{
    ViewData["Title"] = "Đặt hàng thành công";
}


<div class="container mt-5 text-center">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="bg-light py-3">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/Homepage" class="text-secondary">
                        <i class="fas fa-home mr-1"></i>Trang chủ
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Carts" class="text-secondary">Giỏ hàng</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Checkouts" class="text-secondary">Thanh toán</a>
                </li>
                <li class="breadcrumb-item active text-primary" aria-current="page">
                    Hoàn tất
                </li>
            </ol>
        </div>
    </nav>
    <!-- Checkout Steps -->
    <div class="bg-white shadow-sm py-4">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-4">
                    <div class="rounded-circle border border-success d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 40px; height: 40px;background: #10b981;">
                        <span class="text-white font-weight-bold">1</span>
                    </div>
                    <div class="small font-weight-bold">Giỏ hàng</div>
                </div>
                <div class="col-4">
                    <div class="rounded-circle border border-success d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 40px; height: 40px;background: #10b981;">
                        <span class="text-white font-weight-bold">2</span>
                    </div>
                    <div class="small font-weight-bold">Thanh toán</div>
                </div>
                <div class="col-4">
                    <div class="rounded-circle border border-primary d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 40px; height: 40px; background: #3b82f6;">
                        <span class="text-white font-weight-bold">3</span>
                    </div>
                    <div class="small font-weight-bold">Hoàn tất</div>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="success-animation mt-3 mb-2 text-center">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-success bg-opacity-10 text-success" style="width: 60px; height: 60px;">
                <i class="fas fa-check-circle fa-2x"></i>
            </div>
        </div>
        <h2 class="text-success mb-4 mt-1">🎉 Đặt hàng thành công!</h2>
        <p>Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi.</p>
        <p>Đơn hàng của bạn đang được xử lý.</p>
    </div>
    <div class="bg-light border border-primary rounded p-4 mb-4">
    <h3 class="h5 font-weight-bold text-primary mb-4 d-flex align-items-center">
        <i class="fas fa-info-circle mr-2"></i>
        Thông tin đơn hàng
    </h3>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex mb-2">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Mã đơn hàng:</span>
                <span class="font-weight-bold text-primary">#@Model.OrderCode</span>
            </div>
            <div class="d-flex mb-2">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Ngày đặt:</span>
                <span>@Model.OrderDate.ToString("dd/MM/yyyy - HH:mm")</span>
            </div>
            <div class="d-flex mb-2">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Phương thức:</span>
                <span>@Model.PaymentMethod</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex mb-2">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Tổng tiền:</span>
                <span class="text-danger font-weight-bold h6 mb-0">@Model.TotalAmount.ToString("N0")đ</span>
            </div>
            <div class="d-flex mb-2">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Trạng thái:</span>
                <span class="badge badge-warning py-1 px-2">@Model.Status</span>
            </div>
            <div class="d-flex">
                <span class="font-weight-medium text-secondary mr-2" style="width: 120px;">Dự kiến giao:</span>
                <span>@Model.EstimatedDeliveryDate.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
    </div>
</div>



    <p class="mt-3 text-muted">Bạn sẽ được chuyển về trang chủ trong vài giây...</p>

    <a href="/" class="btn btn-primary mt-3">Về trang chủ ngay</a>
</div>

