@using Abp.Authorization.Users
@using Acme.SimpleTaskApp.Web.Models.Common.Modals
@* @using Acme.SimpleTaskApp.Web.Models.Batchs *@
@* @model StockListViewModel *@
@{
    Layout = null;
}
<div class="modal fade" id="BatchCreateModal" tabindex="-1" role="dialog" aria-labelledby="BatchCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewBatch")))
            <form name="batchCreateForm" role="form" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-stock-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("DateEntry")</label>
                                <div class="col-md-9">
                                <input type="date" class="form-control" name="DateEntry" required>
                                </div>
                            </div>

                            <div class="form-group row required">
                              <label class="col-md-3 col-form-label">@L("Importer")</label>
                              <div class="col-md-9">
                                <input type="text" class="form-control" name="Importer" required>
                              </div>
                            </div>
                        </div>

                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
