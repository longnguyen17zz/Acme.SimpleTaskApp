@using Abp.Authorization
@* @inject IPermissionChecker PermissionChecker *@
@using Acme.SimpleTaskApp.Web.Models.Batches
@model BatchListViewModel

@using Acme.SimpleTaskApp.Web.Startup
@{
  ViewBag.Title = L("Batches");
  ViewBag.CurrentPageName = PageNames.Batches;
}
@section scripts
{
  <environment names="Development">
    <script src="~/view-resources/Views/Batches/Index.js" asp-append-version="true"></script>
  </environment>

  <environment names="Staging,Production">
    <script src="~/view-resources/Views/Batches/Index.min.js" asp-append-version="true"></script>
  </environment>
}

<section class="content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h1>@L("Batches")</h1>
      </div>
      <div class="col-sm-6">
        @* @if (await PermissionChecker.IsGrantedAsync("Pages.Batches.Create")) *@
        @* { *@
          <a href="javascript:;" data-toggle="modal" data-target="#BatchCreateModal" class="btn bg-blue float-sm-right">
            <i class="fa fa-plus-square"></i>
            @L("Create")
          </a>
        @* } *@
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            @await Html.PartialAsync("~/Views/Batches/Index.AdvancedSearch.cshtml")
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table id="BatchesTable" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th></th>
                    <th scope="col" class="text-center">@L("DateEntry")</th>
                    <th scope="col" class="text-center">@L("Importer")</th>
                    @* <th scope="col" class="text-center">@L("StockQuantity")</th> *@
                    @* <th scope="col" class="text-center">@L("CreationTime")</th> *@
                    <th style="width: 150px" scope="col" class="text-center">@L("Actions")</th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@await Html.PartialAsync("~/Views/Batches/_CreateBatchModal.cshtml", Model) 

<div class="modal fade" id="BatchEditModal" tabindex="-1" role="dialog" aria-labelledby="StockEditModalLabel" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>
