<!-- Modal  Create Product-->
@using Abp.Authorization.Users
@using Acme.SimpleTaskApp.Web.Models.Common.Modals
@using Acme.SimpleTaskApp.Web.Models.FlashSales
@model FlashSaleListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="FlashSaleCreateModal" tabindex="-1" role="dialog" aria-labelledby="FlashSaleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewFlashSale")))
            <form name="flashSaleCreateForm" role="form" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-flashSale-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Name")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Name" required>
                                </div>
                            </div>

                             <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("StartTime")</label>
                                <div class="col-md-9">
                                    <input type="datetime-local" class="form-control" name="StartTime" id="StartTime" required>
                                </div> 
                             </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("EndTime")</label>
                                <div class="col-md-9">
                                    <input type="datetime-local" class="form-control" name="EndTime" id="EndTime" required>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
