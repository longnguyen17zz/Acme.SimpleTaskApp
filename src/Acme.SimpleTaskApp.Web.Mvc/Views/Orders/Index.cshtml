@using Abp.Authorization
@inject IPermissionChecker PermissionChecker

@using Acme.SimpleTaskApp.Web.Models.Orders
@model OrderListViewModel


@using Acme.SimpleTaskApp.Web.Startup

@{
    ViewBag.Title = L("Orders");
    ViewBag.CurrentPageName = PageNames.Orders;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Orders/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Orders/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Orders")</h1>
            </div>
            <div class="col-sm-6 text-right" style="padding: 20px;">
               <a style="border: 1px solid gray;padding: 5px; border-radius: 7px; background: white;color: black;" asp-action="DownloadExcel" asp-controller="Orders"><i class="fas fa-download"></i> Xuất file</a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @await Html.PartialAsync("~/Views/Orders/Index.AdvancedSearch.cshtml")
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="OrdersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th scope="col" class="text-center" style="width: 50px;">@L("FullName")</th>
                                        <th scope="col" class="text-center">@L("PhoneNumber")</th>
                                        <th scope="col" class="text-center">@L("Address")</th>
                                        <th scope="col" class="text-center">@L("TotalPrice")</th>
                                        <th scope="col" class="text-center">@L("PaymentMethod")</th>
                                        <th scope="col" class="text-center">@L("Status")</th>
                                        <th scope="col" class="text-center">@L("OrderDate")</th>
                                        <th style="width: 150px" scope="col" class="text-center">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết đơn hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered" id="orderDetailsTable">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Nội dung sẽ được append bằng JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
