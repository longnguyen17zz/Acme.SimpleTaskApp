                </div>
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="email">@L("Price")</label>
                    <div class="col-md-9">
                        <input id="price" type="text" class="form-control" name="Price" value="@Model.Product.Price" required >
                    </div>
                </div>
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="stockQuantity">@L("StockQuantity")</label>
                    <div class="col-md-9">
