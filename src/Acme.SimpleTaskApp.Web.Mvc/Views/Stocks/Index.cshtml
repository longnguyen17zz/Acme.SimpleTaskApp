@using Abp.Authorization
@inject IPermissionChecker PermissionChecker
@using Acme.SimpleTaskApp.Web.Models.Stocks
@model StockListViewModel

@using Acme.SimpleTaskApp.Web.Startup
@{
    ViewBag.Title = L("Stocks");
    ViewBag.CurrentPageName = PageNames.Stocks;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Stocks/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Stocks/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Stocks")</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @await Html.PartialAsync("~/Views/Stocks/Index.AdvancedSearch.cshtml")
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StocksTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th scope="col" class="text-center">@L("ProductName")</th>
                                        <th scope="col" class="text-center">@L("CategoryName")</th>
                                        <th scope="col" class="text-center">@L("StockQuantity")</th>
                                        <th scope="col" class="text-center">@L("CreationTime")</th>
                                        <th style="width: 150px" scope="col" class="text-center">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Stocks/_CreateStockModal.cshtml", Model)

<div class="modal fade" id="StockEditModal" tabindex="-1" role="dialog" aria-labelledby="StockEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
