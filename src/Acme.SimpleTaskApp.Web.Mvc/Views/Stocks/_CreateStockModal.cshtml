<!-- Modal  Create Product-->
@using Abp.Authorization.Users
@using Acme.SimpleTaskApp.Web.Models.Common.Modals
@using Acme.SimpleTaskApp.Web.Models.Stocks
@model StockListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="StockCreateModal" tabindex="-1" role="dialog" aria-labelledby="StockCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewStock")))
            <form name="stockCreateForm" role="form" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-stock-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("ProductName")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Name" required>
                                </div>
                            </div>
                           
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Quantity")</label>
                                <div class="col-md-9">
                  <input type="text" class="form-control" name="InitQuantity" id="StockQuantity" required>
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="CreateCategoryId">@L("Category")</label>
                                <div class="col-md-9">
                                    <select class="form-control" id="CreateCategoryId" name="CategoryId" required>
                                        <option value="">-- Chọn danh mục --</option>

                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
